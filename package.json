{
  "name": "bcrgui",
  "version": "0.0.0",
  "author": "Claudio Nicora",
  "homepage": "https://github.com/nicorac/bcr-gui",
  "scripts": {
    "ng": "ng",
    "start": "ionic serve",
    "build": "ng build",
    "prebuild:android": "node scripts\\check-android-version.js",
    "build:android": "ionic capacitor build android --no-open --prod && cd android && gradlew assembleRelease && cd ..",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "generate-assets": "npx capacitor-assets generate --assets-path app/src/assets/icons --android",
    "open-android-studio": "npx cap open android"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^17.1.1",
    "@angular/common": "^17.1.1",
    "@angular/core": "^17.1.1",
    "@angular/forms": "^17.1.1",
    "@angular/platform-browser": "^17.1.1",
    "@angular/platform-browser-dynamic": "^17.1.1",
    "@angular/router": "^17.1.1",
    "@capacitor-community/contacts": "file:packages/capacitor-community-contacts-5.0.4.tgz",
    "@capacitor-community/keep-awake": "^4.0.0",
    "@capacitor-community/native-audio": "file:packages/capacitor-community-native-audio-5.0.1.tgz",
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "^5.0.7",
    "@capacitor/clipboard": "^5.0.6",
    "@capacitor/core": "^5.6.0",
    "@capacitor/filesystem": "^5.2.1",
    "@capacitor/preferences": "^5.0.7",
    "@capacitor/share": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@capgo/capacitor-navigation-bar": "^6.0.12",
    "@ionic/angular": "^7.6.6",
    "capacitor-native-settings": "^5.0.1",
    "filesize": "^10.1.0",
    "ionicons": "^7.1.0",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.1",
    "@angular-eslint/builder": "^17.2.1",
    "@angular-eslint/eslint-plugin": "^17.2.1",
    "@angular-eslint/eslint-plugin-template": "^17.2.1",
    "@angular-eslint/template-parser": "^17.2.1",
    "@angular/cli": "^17.1.1",
    "@angular/compiler": "^17.1.1",
    "@angular/compiler-cli": "^17.1.1",
    "@angular/language-service": "^17.1.1",
    "@capacitor/assets": "^3.0.4",
    "@capacitor/cli": "^5.2.3",
    "@ionic/angular-toolkit": "^11.0.1",
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.11.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.2",
    "typescript": "^5.3.3"
  },
  "description": "BCR-GUI is a companion app for BCR (Basic Call Recorder)"
}